<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- We use noupdate="1" so the sequence doesn't reset every time you upgrade the module -->
    <data noupdate="1">

        <!-- This is the definition of our sequence -->
        <record id="seq_hotel_reservation" model="ir.sequence">
            <!-- A human-readable name for the sequence -->
            <field name="name">Hotel Reservation Sequence</field>

            <!-- A unique code to identify this sequence. We will use this in our Python code. -->
            <field name="code">hotel.reservation</field>

            <!-- The prefix that appears before the number. -->
            <field name="prefix">R</field>

            <!-- The number of digits for the number part. e.g., padding=3 means 1 -> 001. -->
            <field name="padding">3</field>

            <!-- If this is false, the sequence is global across all companies. -->
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>




